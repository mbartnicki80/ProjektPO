<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            minHeight="550.0" minWidth="850.0"
            fx:controller="agh.ics.oop.presenter.SimulationViewPresenter">
    <top>
        <VBox spacing="10" alignment="CENTER">
            <Label fx:id="movementsDescriptionLabel" textAlignment="CENTER"/>
        </VBox>
    </top>
    <center>
        <HBox spacing="10" alignment="CENTER">
            <GridPane fx:id="mapGrid" gridLinesVisible="true" alignment="CENTER"/>
        </HBox>
    </center>
    <left>
        <VBox spacing="10">
            <HBox spacing="10">
                <Button fx:id="showStatsButton" text="Show statistics" onAction="#onShowStatsClicked"/>
                <Button fx:id="hideStatsButton" text="Hide statistics" onAction="#onHideStatsClicked" visible="false"/>
            </HBox>
            <Label fx:id="statsLabel" visible="false" style="-fx-background-color: lightblue;"/>
        </VBox>

    </left>
    <bottom>
        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="stopButton" text="Stop" onAction="#onSimulationStopClicked"/>
            <Button fx:id="resumeButton" text="Resume" onAction="#onSimulationResumeClicked" visible="false"/>
        </HBox>
    </bottom>
</BorderPane>
